#!/usr/bin/env bash
#MISE description="Setting up project"

echo ""
echo "üçú Setting up project"
echo ""

# Only run hk install if not in a git worktree
if ! git worktree list | grep -q "$(pwd)"; then
	hk install
fi

bun install

OPENCODE_PLUGIN_PATH="$(pwd)/.opencode/node_modules/@opencode-ai/plugin"
if [ -d "${OPENCODE_PLUGIN_PATH}" ]; then
	mkdir -p node_modules/@opencode-ai
	ln -sf "${OPENCODE_PLUGIN_PATH}" node_modules/@opencode-ai/plugin
fi

echo ""
echo "üëç Done"
echo ""
